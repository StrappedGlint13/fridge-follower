{% extends "layout.html" %}

{% block body %}
<form method="POST" action="{{ url_for('products_create') }}">
<h2>
New Product
</h2>
 <table>
    <tr>
      <td>
	 Name
         <input type="text" name="name"/>
      </td>
    </tr>
   <tr>
      <td>
	 Amount
         <input type="text" name="amount"/>
      </td>
    </tr>  
   <tr>
      <td>
	 Price 
         <input type="text" name="price"/>
      </td>
    </tr> 
   <tr>
      
      <td>
         <input type="submit" value="Add a new product"/>
      </td>
    </tr> 
</form>
{% endblock %}
